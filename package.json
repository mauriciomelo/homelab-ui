{
  "name": "homelab-ui",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "bin": {
    "tess": "dist-cli/index.mjs"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "dev:electron": "electron .",
    "test": "vitest",
    "test:ci": "vitest --watch=false --browser.headless",
    "test:play": "vitest --browser.ui=false --browser.headless=false --watch=true --isolate=false",
    "test:visual": "vitest --project=visual",
    "tsc": "tsc --noEmit",
    "lint": "eslint . --fix",
    "dance": "concurrently --kill-others-on-fail -n \"lint,test,tsc\" \"pnpm run lint\" \"pnpm run test:ci --silent passed-only\" \"pnpm run tsc\"",
    "build:cli": "tsup cli/index.ts --format esm --out-dir dist-cli --clean --target node20",
    "cli": "pnpm run build:cli && node dist-cli/index.mjs",
    "postinstall": "pnpm run build:cli"
  },
